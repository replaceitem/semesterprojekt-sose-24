<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.driveractivity.gui.EditView">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label>Activity Type</Label>
    <TextField GridPane.columnIndex="1"/>

    <Label GridPane.rowIndex="1">Start Time</Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label GridPane.rowIndex="2">End Time</Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label GridPane.rowIndex="3">Duration</Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>
