<?xml version="1.0" encoding="UTF-8"?>

<?import org.driveractivity.gui.ActivityPane?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.driveractivity.gui.MainController">
<stylesheets>
    <URL value="@main-view.css" />
    <URL value="@activity-pane.css" />
</stylesheets>
<top>
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Open" onAction="#openFile">
                <graphic><FontIcon iconLiteral="mdi2f-folder-open" iconSize="16"/></graphic>
            </MenuItem>
            <MenuItem text="Save" onAction="#saveFile">
                <graphic><FontIcon iconLiteral="mdi2c-content-save" iconSize="16"/></graphic>
            </MenuItem>
        </Menu>
        <Menu text="Help">
            <MenuItem text="About" onAction="#openAbout">
                <graphic><FontIcon iconLiteral="mdi2i-information-outline" iconSize="16"/></graphic>
            </MenuItem>
        </Menu>
    </MenuBar>
</top>

<left>
    <HBox spacing="10">
        <Pane/> <!-- Empty space -->
        <VBox spacing="10">
            <Pane/> <!-- Empty space -->
            <Text styleClass="sidebar-section-heading">
                Create activity
            </Text>
            <VBox spacing="10">
                <Button fx:id="restButton" text="Rest" styleClass="activity-button, activity-rest" onAction="#addActivity"/>
                <Button fx:id="driveButton" text="Drive" styleClass="activity-button, activity-drive" onAction="#addActivity"/>
                <Button fx:id="workButton" text="Work" styleClass="activity-button, activity-work" onAction="#addActivity"/>
                <Button fx:id="availableButton" text="Available" styleClass="activity-button, activity-available" onAction="#addActivity"/>
            </VBox>
            <Separator/>
            <Text styleClass="sidebar-section-heading">
                Move selected activity
            </Text>
            <HBox>
                <Button onAction="#onMoveBackward" styleClass="move-button" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontIcon iconLiteral="mdi2a-arrow-left" iconSize="48"/>
                    </graphic>
                </Button>
                <Button onAction="#onMoveForward" styleClass="move-button" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontIcon iconLiteral="mdi2a-arrow-right" iconSize="48"/>
                    </graphic>
                </Button>
            </HBox>
            <Separator/>
            <Text styleClass="sidebar-section-heading">
                Specific Conditions
            </Text>
            <VBox spacing="2">
                <Button onAction="#onAddBeginFerryTrain" maxWidth="Infinity" alignment="BASELINE_LEFT">
                    <graphic>
                        <FontIcon iconLiteral="mdi2f-ferry" iconSize="16" iconColor="darkgreen"/>
                    </graphic>
                    Add Begin Ferry Train
                </Button>
                <Button onAction="#onAddEndFerryTrain" maxWidth="Infinity" alignment="BASELINE_LEFT">
                    <graphic>
                        <FontIcon iconLiteral="mdi2f-ferry" iconSize="16" iconColor="darkred"/>
                    </graphic>
                    Add End Ferry Train
                </Button>
                <Button onAction="#onAddOutOfScope" maxWidth="Infinity" alignment="BASELINE_LEFT">
                    <graphic>
                        <FontIcon iconLiteral="mdi2b-border-none-variant" iconSize="16"/>
                    </graphic>
                    Add Out Of Scope
                </Button>
            </VBox>
            <ScrollPane fitToWidth="true">
                <VBox fx:id="specificConditions" spacing="1">
                    
                </VBox>
            </ScrollPane>
            <Separator/>
            <Text styleClass="sidebar-section-heading">
                View settings
            </Text>
            <HBox style="-fx-alignment: center">
                <Label>Day Dividers</Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="dayToggle" onAction="#toggleDayDivider"  styleClass="feature-toggle-label"/>
            </HBox>
            <HBox style="-fx-alignment: center">
                <Label>Week Dividers</Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="weekToggle" onAction="#toggleWeekDivider"  styleClass="feature-toggle-label"/>
            </HBox>
            <HBox style="-fx-alignment: center">
                <Label>Card Status</Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="cardToggle" onAction="#toggleCardStatus"  styleClass="feature-toggle-label"/>
            </HBox>
            <HBox style="-fx-alignment: center">
                <Label>Specific Conditions</Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="conditionToggle" onAction="#toggleSpecificConditions"  styleClass="feature-toggle-label"/>
            </HBox>

            <Pane VBox.vgrow="ALWAYS"/> <!-- Empty space -->
            <Button fx:id="clearButton" text="Clear" styleClass="activity-button, activity-clear" onAction="#clearActivities"/>
            <Pane/> <!-- Empty space -->
        </VBox>
        <Separator orientation="VERTICAL"/> <!-- Divider -->
    </HBox>
</left>

<center>
    <ScrollPane fitToWidth="true" fitToHeight="true">
        <ActivityPane fx:id="activityPane"/>
    </ScrollPane>
</center>
</BorderPane>