<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="dateHandlerRoot" alignment="CENTER" prefHeight="213.0" prefWidth="486.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.driveractivity.gui.DateHandler">
    <children>
      <Label fx:id="errorLable" text="Start Zeit größer oder gleich Endzeit" />
      <GridPane fx:id="myGridPane">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Start Zeit" />
            <Label text="End Zeit" GridPane.rowIndex="1" />
            <Label text="Dauer" GridPane.rowIndex="2" />
            <ComboBox fx:id="cb_Hour_start" disable="true" onAction="#onHandleStart" prefWidth="150.0" GridPane.columnIndex="1" />
            <ComboBox fx:id="cb_Hour_end" disable="true" onAction="#onHandleEnd" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="cb_Hour_duration" disable="true" onAction="#onHandleDuration" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <ComboBox fx:id="cb_minute_start" disable="true" onAction="#onHandleStart" prefWidth="150.0" GridPane.columnIndex="2" />
            <ComboBox fx:id="cb_minute_end" disable="true" onAction="#onHandleEnd" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <ComboBox fx:id="cb_minute_duration" disable="true" onAction="#onHandleDuration" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <ComboBox fx:id="cb_second_start" disable="true" onAction="#onHandleStart" prefWidth="150.0" GridPane.columnIndex="3" />
            <ComboBox fx:id="cb_second_end" disable="true" onAction="#onHandleEnd" prefWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <ComboBox fx:id="cb_second_duration" disable="true" onAction="#onHandleDuration" prefWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <CheckBox fx:id="aktiv_start" mnemonicParsing="false" onAction="#onAction_aktiv_start" text="aktiv" GridPane.columnIndex="4" />
            <CheckBox fx:id="aktiv_end" mnemonicParsing="false" onAction="#onAction_aktiv_end" text="aktiv" GridPane.columnIndex="4" GridPane.rowIndex="1" />
            <CheckBox fx:id="aktiv_duration" mnemonicParsing="false" onAction="#onAction_aktiv_duration" text="aktiv" GridPane.columnIndex="4" GridPane.rowIndex="2" />
         </children>
      </GridPane>
        <Button fx:id="processButton" onAction="#processButtonAonAction" text="Process Date" />
    </children>
</VBox>
