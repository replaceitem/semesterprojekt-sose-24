<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="dateHandlerRoot" alignment="CENTER" prefHeight="213.0" prefWidth="486.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.driveractivity.gui.DateHandler">
    <Label fx:id="errorLabel" text="Start Zeit größer oder gleich Endzeit"/>
    <GridPane fx:id="myGridPane">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Start Zeit"/>
        <Label text="End Zeit" GridPane.rowIndex="1"/>
        <Label text="Dauer" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbHourStart" disable="true" onAction="#onHandleStart" prefWidth="150.0"
                  GridPane.columnIndex="1"/>
        <ComboBox fx:id="cbHourEnd" disable="true" onAction="#onHandleEnd" prefWidth="150.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <ComboBox fx:id="cbHourDuration" disable="true" onAction="#onHandleDuration" prefWidth="150.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbMinuteStart" disable="true" onAction="#onHandleStart" prefWidth="150.0"
                  GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbMinuteEnd" disable="true" onAction="#onHandleEnd" prefWidth="150.0"
                  GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <ComboBox fx:id="cbMinuteDuration" disable="true" onAction="#onHandleDuration" prefWidth="150.0"
                  GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <CheckBox fx:id="activeStart" mnemonicParsing="false" onAction="#onActionActiveStart" text="aktiv"
                  GridPane.columnIndex="4"/>
        <CheckBox fx:id="activeEnd" mnemonicParsing="false" onAction="#onActionActiveEnd" text="aktiv"
                  GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <CheckBox fx:id="activeDuration" mnemonicParsing="false" onAction="#onActionActiveDuration" text="aktiv"
                  GridPane.columnIndex="4" GridPane.rowIndex="2"/>
    </GridPane>
    <Button fx:id="processButton" onAction="#onActionProcess" text="Process Date"/>
</VBox>
