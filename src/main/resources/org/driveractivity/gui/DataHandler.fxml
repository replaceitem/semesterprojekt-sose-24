<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="213.0" prefWidth="486.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.driveractivity.gui.DateHandler">
    <Label fx:id="errorLabel" text="Start Zeit größer oder gleich Endzeit" />
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Start Zeit" />
        <Label text="End Zeit" GridPane.rowIndex="1" />
        <Label text="Dauer" GridPane.rowIndex="2" />
      <TextField fx:id="cbHourStart" disable="true" editable="false" text="0" GridPane.columnIndex="1" />
      <TextField fx:id="cbMinuteStart" disable="true" editable="false" text="0" GridPane.columnIndex="2" />
      <TextField fx:id="cbHourEnd"  text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="cbMinuteEnd"  text="0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <TextField fx:id="cbHourDuration" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="cbMinuteDuration" text="0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    </GridPane>
    <Button fx:id="processButton" onAction="#onActionProcess" text="Process Date" />
</VBox>
