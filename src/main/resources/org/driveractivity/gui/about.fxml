<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER">
    <ImageView fitWidth="256" preserveRatio="true">
        <Image url="@icons/icon512.png"/>
    </ImageView>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold">
        Driver Activity Visualization
    </Label>
    <Label fx:id="versionLabel">
        Version: $version
    </Label>
    <Label fx:id="buildTimestampLabel">
        Build Timestamp: $build_timestamp
    </Label>
</VBox>
